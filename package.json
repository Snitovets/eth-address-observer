{
	"name": "eth-address-observer",
	"version": "0.3.6",
	"description": "Ethereum addresses observer for poonkt.io",
	"main": "dist/index.js",
	"typings": "typings/index.d.ts",
	"scripts": {
		"dev": "nodemon",
		"build": "npm run clean && tsc",
		"clean": "del-cli ./dist && del-cli ./typings",
		"lint": "npx eslint . --ext .ts,.tsx",
		"test:ci": "jest --ci --runInBand",
		"test:watch": "jest --watch"
	},
	"keywords": [
		"eth",
		"ether",
		"ethereum",
		"web3",
		"wallet",
		"address",
		"transaction",
		"pending",
		"confirmed",
		"observer",
		"watch",
		"poonkt"
	],
	"author": "Vitaly Snitovets",
	"license": "LGPL-3.0-or-later",
	"dependencies": {
		"@types/bintrees": "^1.0.2",
		"tslib": "2.0.3",
		"web3": "^1.3.0"
	},
	"devDependencies": {
		"@types/jest": "^26.0.14",
		"@typescript-eslint/eslint-plugin": "^4.4.1",
		"@typescript-eslint/parser": "^4.4.1",
		"del-cli": "^3.0.1",
		"dotenv": "^8.2.0",
		"eslint": "^7.11.0",
		"eslint-config-prettier": "^6.12.0",
		"eslint-plugin-jest": "^24.1.0",
		"jest": "^26.5.3",
		"nodemon": "^2.0.5",
		"ts-jest": "^26.4.1",
		"ts-node": "^9.0.0",
		"typescript": "^4.0.3"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"setupFilesAfterEnv": [
			"<rootDir>/src/test/setup.ts"
		],
		"modulePathIgnorePatterns": [
			"<rootDir>/src/test/utils"
		]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/poonkt/eth-address-observer.git"
	},
	"bugs": {
		"url": "https://github.com/poonkt/eth-address-observer/issues"
	},
	"homepage": "https://github.com/poonkt/eth-address-observer#readme"
}
